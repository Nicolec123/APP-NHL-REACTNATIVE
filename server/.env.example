# Porta do servidor
PORT=4000

# URL do frontend (CORS)
FRONTEND_URL=http://localhost:8081

# JWT - gere um segredo forte em producao
JWT_SECRET=seu_segredo_jwt_aqui_troque_em_producao
JWT_EXPIRES_IN=7d

# PostgreSQL - Railway/Render/Supabase fornecem DATABASE_URL
DATABASE_URL=postgresql://usuario:senha@localhost:5432/icehub

# Redis (opcional) - cache de jogos e noticias
REDIS_URL=redis://localhost:6379

# Notícias (use ao menos uma; GNews é gratuito 100 req/dia)
# NewsAPI - https://newsapi.org
NEWS_API_KEY=
# GNews - https://gnews.io (gratuito, 100 req/dia)
GNEWS_API_KEY=

# TheSportsDB - logos e imagens (gratuito; chave padrão 123)
# https://www.thesportsdb.com
THESPORTSDB_API_KEY=123

# API-Sports Hockey - Olimpíadas e hockey internacional (plano free 100 req/dia)
# https://api-sports.io → criar conta e pegar API key em Hockey
APISPORTS_HOCKEY_KEY=
